<div class="container">
<div class="row">
<div class="offset-md-3 col-md-6">
<h1><%=title %></h1>

<form class="form" method="post">
<div class="from-group">
<label for="idTextField">Employee ID</label>
<input
    type="text"
    class="form-control"
    id="idTextField"
    placeholder="Employee Id"
    name="Employeeid"
    required
/>
</div>

<div class="from-group">
<label for="NameTextField">Employee Name</label>
<input
    type="text"
    class="form-control"
    id="NameTextField"
    placeholder="Employee Name:"
    name="Employeename"
    required
/>
</div>

<div class="from-group">
<label for="DepartmentTextField">Department</label>
<input
    type="text"
    class="form-control"
    id="DepartmentTextField"
    placeholder="Department"
    name="Department"
    required
/>
</div>

<div class="from-group">
<label for="DesgTextField">Designation</label>
<input
    type="text"
    class="form-control"
    id="DesgTextField"
    placeholder="Designation"
    name="Designation"
    required
/>
</div>

<div class="from-group">
<label for="SalaryTextField">Salary</label>
<input
    type="text"
    class="form-control"
    id="SalaryTextField"
    placeholder="Salary"
    name="Salary"
    required
/>
</div>

<button class="btn btn-primary" type="submit">
<i class="fas fa-edit"></i>Submit</button>

 <a href="/employees" class="btn btn-warning">
<i class="fas fa-undo"></i>Cancel</a>

</form>
</div>
</div>
</div>

